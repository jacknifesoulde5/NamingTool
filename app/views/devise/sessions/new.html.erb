<!-- ナビゲーションバー -->
<%= render 'layouts/navbar' %>

<!-- コンテンツ -->
<div class="container mt-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "col-md-6 offset-md-3" }) do |f| %>
    <div class="field">
      <%= f.label :email,"Eメールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-sm" %>
    </div>

    <div class="field">
      <%= f.label :password,"パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password",class: "form-control form-control-sm" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン",class: "btn btn-outline-dark mb-2 mx-auto d-block" %>
    </div>
  <% end %>

  <div class="col-md-6 offset-md-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
