<!-- ナビゲーションバー -->
<%= render 'layouts/navbar' %>

<!-- コンテンツ -->
<div class="container mt-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col-md-6 offset-md-3" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email,"Eメールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-sm" %>
    </div>

    <div class="field">
      <%= f.label :password,"パスワード" %>
      <% if @minimum_password_length %>
      <em>(最小<%= @minimum_password_length %> 文字まで)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control form-control-sm" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation,"確認用パスワード" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control form-control-sm" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "登録",class: "btn btn-outline-dark mb-2 mx-auto d-block" %>
    </div>
  <% end %>

  <div class="col-md-6 offset-md-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
