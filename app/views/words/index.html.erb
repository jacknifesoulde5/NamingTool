<!-- ナビゲーションバー -->
<%= render 'navbar' %>

<!-- コンテンツ -->
<div class="container mt-3">

  <div class="border rounded-lg mb-4">
    <div class="bg-dark text-white p-2">検索条件</div>
    <form class="px-4 pt-4 pb-2 mb-2">
      <div class="form-group row">
          <label class="col-2" for="inputJapanese">日本語</label>
          <div class="col-5">
            <input type="text" class="form-control form-control-sm" id="inputJapanese">
          </div>
      </div>
      <div class="form-group row">
          <label class="col-2" for="inputEnglish">英語</label>
          <div class="col-5">
            <input type="text" class="form-control form-control-sm" id="inputEnglish">
          </div>
      </div>
      <div class="form-group row">
          <label class="col-2" for="inputUsed">用途</label>
          <div class="col-7">
            <input type="text" class="form-control form-control-sm" id="inputUsed">
          </div>
      </div>
      <!-- 検索ボタン -->
      <div class="text-center">
        <button type="button" class="btn btn-outline-dark mb-2">検索</button>
        <button type="button" class="btn btn-outline-dark mb-2">クリア</button>
      </div>
    </form>
  </div>

  <!-- 新規作成リンク -->
  <a href="/words/new" class="btn btn-outline-dark mb-2 float-right">新規作成</a>
  <!-- 一覧 -->
  <table class="table table-hover">
    <thead class="bg-dark text-white">
      <th scope="col">日本語</th>
      <th scope="col">英語</th>
      <th scope="col">操作の種類</th>
      <th scope="col">具体的な操作方法</th>
      <th scope="col">用途</th>
      <th style="width:100px" scope="col"></th>
      <th style="width:100px" scope="col"></th>
    </thead>
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.japanese_word %></td>
          <td><%= word.english_word %></td>
          <td><%= word.manualKind %></td>
          <td><%= word.concreteMethod %></td>
          <td><%= word.use %></td>
          <td><%= link_to '編集', 
                  edit_word_path(word),
                  class: 'btn btn-outline-dark mb-2'
              %></td>
          <td><%= link_to '削除', 
                  word,
                  class: 'btn btn-outline-danger mb-2 delete',
                  method: :delete,
                  remote: true,
                  data: { confirm: "単語を削除します。よろしいでしょうか？"}
              %></td>
        </tr>      
      <% end %>
    </tbody>
  </table>

  <!-- ページネーション -->
  <%= paginate @words %>
</div>
